{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      },
      {
        "src": "views/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/index.js"
      },
      {
        "src": "/views/(.*)",
        "dest": "/views/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/index.js"
      }
    ],
    "env": {
      "DB_ALT_HOST": "@dbAltHost",
      "SECRET_KEY": "@secret_key",
      "AUTH_EMAIL": "@auth_email",
      "AUTH_PASSWORD": "@auth_password"
    }
  }
  
  